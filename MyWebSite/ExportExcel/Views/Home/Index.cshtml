@model Excel_Csv_Uploader.Models.UploadModel
@{
    //Layout = null;
    ViewBag.Title = "Import Issue";
    var failedIssues = ViewData["failedIssues"] as List<string>;
}

<div class="portlet">
    <div class="caption">
        <h2>
            ImportIssue
        </h2>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div class="portlet">
                <div class="portlet-title">
                </div>
                <div class="portlet-body">
                    <div class="form body">
                        <div class="form-horizontal">
                            @using (Html.BeginForm("UploadIssue", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-3">
                                        <input type="file" id="dataFile" name="file" class="btn btn-default" />
                                    </div>
                                    <div class="col-md-7">
                                        @Html.ValidationMessageFor(model => model.ErrorMessage, "", new { @class = "text-danger", @style = "float:left" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Upload" class="btn btn-default" />
                                        <span class="text-danger">@ViewBag.ImportSucceedIssueMsg</span>
                                        <br />
                                        @{
                                if (failedIssues != null)
                                {
                                    foreach (var item in failedIssues)
                                    {
                                        <span class="text-danger">
                                            @*@ViewBag.ImportIssueMsg*@
                                            @item
                                        </span>
                                            <br />
                                    }
                                }
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <hr />
                        <br />
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-3">
                                    <label class="control-label col-md-8" for="IssueTitle">DownLoad   JIRA - Template</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-3">
                                    <a href="@Url.Action("DownLoadExcelTemplate", "Issue")" class="btn btn-default" style="display:inline">DownLoad</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

